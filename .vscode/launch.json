    "version": "0.2.0",
    "configurations": [
        {
            "name": "Celery",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/celery",
            "args": ["-A", "app.tasks", "worker", "--loglevel=info"],
            "cwd": "${workspaceFolder}",
            "pythonPath": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}